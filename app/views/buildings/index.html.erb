<p id="notice"><%= notice %></p>

<h1>Listing Buildings</h1>

<table>
  <thead>
    <tr>
      <th>Num</th>
      <th>Name</th>
      <th>Face</th>
      <th>Floor num</th>
      <th>Building type</th>
      <th>Estate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @buildings.each do |building| %>
      <tr>
        <td><%= building.num %></td>
        <td><%= building.name %></td>
        <td><%= building.face %></td>
        <td><%= building.floor_num %></td>
        <td><%= building.building_type_id %></td>
        <td><%= building.estate_id %></td>
        <td><%= link_to 'Show', building %></td>
        <td><%= link_to 'Edit', edit_building_path(building) %></td>
        <td><%= link_to 'Destroy', building, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

